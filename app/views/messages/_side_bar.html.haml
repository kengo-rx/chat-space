.chat-side
 .side-hedar
  .side-hedar__box
   %p.side-hedar__box__username
    = current_user.name
   %ul.side-hedar__box__menu
    %li.side-hedar__box__menu__edit-user
     = link_to new_group_path do
      = icon('fas', 'edit')
    %li.side-hedar__box__menu__new-group
     = link_to edit_user_path(current_user) do
      = icon('fas', 'cog')
 .groups
  - current_user.groups.each do |group|
   .group
    = link_to group_messages_path(group) do
     %p.group__group-name
      = group.name
     %p.group__group-message
      = group.show_last_message